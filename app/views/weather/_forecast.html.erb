<ul class="forecast text-muted">
    <li>
        <i class="wi <%=@weather.icon%> fa-2x"></i>
    </li>
    <li>
        <%=@weather.wind_speed%> mph <i class="wi wi-strong-wind"></i>
    </li>
    <li>
        <i class="wi wi-wind from-<%=@weather.wind_bearing%>-deg fa-2x" title="<%=@weather.wind_direction_string%>"></i>
    </li>
    <li>
        <%=@weather.temperature %>
        <i class="wi wi-celsius fa-2x"></i>
    </li>
</ul>