<%= form_for(@fishery, url: "/list/fishery/#add-a-water", :html => {:role => "form", id: "fishery-form"}) do |f| %>
 <% if @fishery.errors.any? %>
    <div class="alert alert-danger">
      <strong><%= pluralize(@fishery.errors.count, "error") %> prohibited this fishery from being saved:</strong>
      <ul>
      <% @fishery.errors.each do | attr, msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row" id="fishery-question">
    <div class="col-lg-12 text-center">
     <%= button_tag "Yes", type: "button", class: "btn btn-primary btn-lg", id: "yes", name: "yes" %> or <%= button_tag "No", class: "btn btn-primary btn-lg", id: "no", name: "no" %>
    </div>
  </div>
  <div class="row fishery-name text-center">
    <div class="col-md-6">
      <div class="form-group">
        <label for="fishery-name">Fishery Name</label>
        <%= f.text_field :name, class: "form-control", id:"fishery-name", placeholder: "Enter fishery name"%>
      </div>
    </div>

    <div class="col-md-6">
      <%= button_tag "Sumbit fishery name", class: "btn btn-xl", name: "submit fishery name" %>
      <%= button_tag "Don't know!", class: "btn btn-xl", name: "unknown" %>
    </div>
  </div>
<% end %>
