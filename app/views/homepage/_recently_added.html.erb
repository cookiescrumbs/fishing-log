<section id="recently-added" class="bg-light-gray">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Recently added</h2>
                    <h3 class="section-subheading text-muted">New places to go fishing.</h3>
                </div>
            </div>
            <div class="row">
            <% if !@waters.nil? && @waters.exists? %>
                <% @waters.each do | water | %>
                    <div class="col-md-4 col-sm-6 explore-item">
                        <a href="/waters/<%= water.id %>" class="explore-link" >
                            <img src="<%= (water.images.first)? water.images.first.image.url(:medium) : '/images/missing.png' %>" class="img-responsive img-centered" alt="<%= water.name %>" itemprop="contentUrl">
                        </a>
                        <div class="explore-caption">
                            <h4><%= water.name %></h4>
                            <p class="text-muted"><%= water.short_address %></p>
                        </div>
                    </div>
                <% end %>
            <% end %>
            </div>
        </div>
</section>
