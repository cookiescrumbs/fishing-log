<section id="fisheries" class="bg-light-gray">
    <div class="container text-center">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="section-heading">Fisheries</h3>
                <h3 class="section-subheading text-muted">Find new fisheries to explore</h3>
            </div>
        </div>
        <div class="row">
        <% if !@fisheries.nil? && @fisheries.exists? %>
            <% @fisheries.each do | fishery | %>
                <% image_src = (fishery.waters.last && fishery.waters.last.images.first)? fishery.waters.last.images.first.image.url(:medium) : '/images/missing.png' %>
                <div class="simple-card col-md-4 col-sm-12">
                    <a href="/fisheries/<%= fishery.slug %>">
                        <img src="<%= image_src %>" class="img-responsive img-centered" alt="<%= fishery.name %>">
                    <div class="caption">
                        <h4><%= fishery.name %></h4>
                        <p class="text-muted"><%= fishery.address.short %></p>
                    </div>
                    </a>
                </div>
            <% end %>
        <% end %>
        </div>
         <a href="/fisheries/all" class="btn btn-default btn-lg m-top17">View all fisheries</a>
    </div>
</section>
