    <header>
        <div class="image-trans">
            <div class="container">
                <div class="intro-text">
                    <div class="intro-lead-in">Where would you like to go fly fishing?</div>
                    <div class="intro-heading">Let's go fishing!</div>
                </div>
            </div>
            <div class="row search">
                <form class="form-inline" role="form">
                    <div class="form-group">
                      <label class="sr-only form-control" for="location">Pick a location</label>
                      <input type="text" class="form-control" id="location" placeholder="Pick a location">
                    </div>
                    <button type="submit" class="btn btn-info">Search</button>
                </form>
            </div>
        </div>
    </header>

    <section id="how-it-works">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading"> Discover &amp; Share fishing destinations</h2>
                    <h3 class="section-subheading text-muted">Find and list fly fishing spots for Browns, Rainbows, Salmon and Sea trout.</h3>
                </div>
            </div>
            <div class="row text-center">
                <div class="col-md-6">
                    <span class="fa-stack fa-4x">
                        <i class="fa fa-circle fa-stack-2x text-primary"></i>
                        <i class="fa fa-map-marker fa-stack-1x fa-inverse"></i>
                    </span>
                    <h4 class="how-it-works-heading">Discover a fishery.</h4>
                    <p class="text-muted">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Minima maxime quam architecto quo inventore harum ex magni, dicta impedit.</p>
                </div>
                <div class="col-md-6">
                    <span class="fa-stack fa-4x">
                        <i class="fa fa-circle fa-stack-2x text-primary"></i>
                        <i class="fa fa-list-ol fa-stack-1x fa-inverse"></i>
                    </span>
                    <h4 class="how-it-works-heading">List a fishery.</h4>
                    <p class="text-muted">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Minima maxime quam architecto quo inventore harum ex magni, dicta impedit.</p>
                </div>
            </div>
        </div>
    </section>

    <section id="explore" class="bg-light-gray">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Explore</h2>
                    <h3 class="section-subheading text-muted">See where others have been fishing, explore, get inspiration &amp; go fishing!</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 col-sm-6 explore-item">
                    <a href="" class="explore-link" >
                        <img src="<%= asset_path('fishing-loch.jpg') %>" class="img-responsive" alt="">
                    </a>
                    <div class="explore-caption">
                        <h4>Fishing Loch</h4>
                        <p class="text-muted">Ardlussa, Jura, Scotland</p>
                    </div>
                </div>
                <div class="col-md-4 col-sm-6 explore-item">
                    <a href="" class="explore-link">
                        <img src="<%= asset_path('malham-tarn.jpg') %>" class="img-responsive" alt="">
                    </a>
                    <div class="explore-caption">
                        <h4>Malham Tarn</h4>
                        <p class="text-muted">Settle, North Yorkshire</p>
                    </div>
                </div>
                <div class="col-md-4 col-sm-6 explore-item">
                    <a href="" class="explore-link">
                        <img src="<%= asset_path('cow-green.jpg') %>" class="img-responsive" alt="">
                    </a>
                    <div class="explore-caption">
                        <h4>Cow Green Reservoir</h4>
                        <p class="text-muted">Barnard Castle, County Durham</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">List a fishery</h2>
                    <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <form name="sentMessage" id="contactForm" novalidate>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Your Name *" id="name" required data-validation-required-message="Please enter your name.">
                                    <p class="help-block text-danger"></p>
                                </div>
                                <div class="form-group">
                                    <input type="email" class="form-control" placeholder="Your Email *" id="email" required data-validation-required-message="Please enter your email address.">
                                    <p class="help-block text-danger"></p>
                                </div>
                                <div class="form-group">
                                    <input type="tel" class="form-control" placeholder="Your Phone *" id="phone" required data-validation-required-message="Please enter your phone number.">
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <textarea class="form-control" placeholder="Your Message *" id="message" required data-validation-required-message="Please enter a message."></textarea>
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="col-lg-12 text-center">
                                <div id="success"></div>
                                <button type="submit" class="btn btn-xl">Send Message</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>