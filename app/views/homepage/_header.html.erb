<header>
    <% if @water.hero_image.present? %>
        <picture>
    <!--lg 1908x480-->
    <!--md 1440x362-->
    <!--sm 991x300-->
    <!--xs 479x300-->
            <!--[if lte IE 9]><video style="display: none;"><![endif]-->
            <source srcset="<%= @water.hero_image.image.url(:lg) %>" media="(min-width: 1400px)">
            <source srcset="<%= @water.hero_image.image.url(:md) %>" media="(min-width: 992px)">
            <source srcset="<%= @water.hero_image.image.url(:sm) %>" media="(min-width: 480px) and (max-width: 991px)">
            <source srcset="<%= @water.hero_image.image.url(:thumb) %>" media="(max-width: 479px)">
            <!--[if lte IE 9]></video><![endif]-->
            <img srcset="<%= @water.hero_image.image.url(:lg) %>" alt="" style="height: auto;">
        </picture>
    <% end %>
    <div class="image-trans">
        <div class="container col-md-offset-2 col-md-8">
            <div class="intro-text">
                <div class="intro-lead-in">Find wild places to catch wild fish</div>
            </div>
        </div>
        <% if @water.hero_image.present? && @water.hero_image.attribution.present? %>
            <div class="attribution">
                Image &copy; Copyright
                <a href="<%= @water.hero_image.attribution['profile_url'] %>"><%= @water.hero_image.attribution['name'] %></a>
                and licensed for reuse under this
                <a href="<%= @water.hero_image.attribution['licence'] %>">Creative Commons Licence</a>.
                <a href="<%= @water.hero_image.attribution['photo_url']%>">More information about this image at Geograph</a>.
            </div>
        <% end %>
    </div>
</header>
<div id="suggested-search"></div>