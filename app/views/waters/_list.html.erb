<h2><%= @fishery.name %> waters </h2>

<table class="table table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Longitude,Latitude</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Destroy</th>
    </tr>
  </thead>

  <tbody>
    <% @fishery.waters.each do | water | %>
      <% unless water.id.nil? %>
        <tr>
          <td><%= water.id %></td>
          <td><%= water.name %></td>
          <td><%= water.lng.to_s + "," + water.lat.to_s %></td>
          <td><%= link_to 'Show', fishery_waters_path(@fishery)%></td>
          <td><%= link_to 'Edit', edit_fishery_water_path(@fishery, water)%></td>
          <td><%= link_to 'Destroy', fishery_water_path(@fishery, water), method: :delete, data: { confirm: "Are you sure you want to delete #{water.name}"} %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>