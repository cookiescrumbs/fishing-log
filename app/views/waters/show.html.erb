<%= render 'shared/navigation' %>
<header>
    <picture>
<!--lg 1908x480-->
<!--md 1440x362-->
<!--sm 991x300-->
<!--xs 479x300-->
        <!--[if lte IE 9]><video style="display: none;"><![endif]-->
        <source srcset="<%= asset_path 'lg_home_hero.jpg' %>" media="(min-width: 1200px)">
        <source srcset="<%= asset_path 'md_home_hero.jpg' %>" media="(min-width: 992px)">
        <source srcset="<%= asset_path 'sm_home_hero.jpg' %>" media="(min-width: 480px) and (max-width: 991px)">
        <source srcset="<%= asset_path 'xs_home_hero.jpg' %>" media="(max-width: 479px)">
        <!--[if lte IE 9]></video><![endif]-->
        <img srcset="<%= asset_path 'lg_home_hero.jpg' %>" alt="A beautiful sunny day at the comaping island in the middle of Loch Sionasgaig" style="height: auto;">
    </picture>
    <div class="image-trans">
        <div class="container col-md-offset-2 col-md-8">
            <div class="intro-text">
                <div class="intro-heading"><%= @water.name %></div>
                <div class="intro-lead-in">
                    managed by <a href="/fisheries/<%= @fishery.slug %>"><%= @fishery.name %></a>
                </div>
            </div>
            <% if !@image_attribution.blank? %>
                <div class="attribution">
                    Image &copy; Copyright
                    <a href="<%= @image_attribution[:profile_url] %>"><%= @image_attribution[:name] %></a>
                    and licensed for reuse under this
                    <a rel="license" href="<%= @image_attribution[:licence] %>">Creative Commons Licence</a>.
                    <a href="<%= @image_attribution[:photo_url]%>">More information about this image at Geograph</a>.
                </div>
            <% end %>
        </div>
    </div>
</header>
<section id="about-this-water">
    <div class="container">
        <h4 class="m-bottom24">About this water</h4>
        <div class="row">
            <div id="weather-forecast" data-lat="<%=@water.latitude%>" data-lng="<%=@water.longitude%>"></div>
        </div>
        <div class="row">
            <div class="col-md-3 remove-padding-left p-bottom10">
                <%= render '/shared/water_type', locals: { category: @water.water_type.category.capitalize }%>
                <%= render '/shared/fish_species', locals: { fish: @species.map{|s| s.name.capitalize }.to_sentence } %>
                <%= render '/shared/location', locals: { location: @water.address } %>
            </div>
            <div class="col-md-9 remove-padding-left remove-padding-right">
                <% if !@water.description.blank? %>
                    <p><%= simple_format @water.description %></p>
                <% end %>
            </div>
        </div>
    </div>
</section>

<section id="location">
    <div class="container">
        <h4 class="m-bottom24">Water map</h4>
        <div
        id="location-map"
        data-zoom="14"
        data-lat="<%=@water.latitude %>"
        data-lng="<%=@water.longitude%>"
        data-annotation=<%=  @water.annotation %>>
        </div>
    </div>
</section>

<% if !@photos.empty? %>
    <section id="photos">
        <div class="container">
            <h4 class="m-bottom24">Photos</h4>
            <%= render '/shared/photo_carousel', locals: { photos: @photos } %>
        </div>
    </section>
<% end %>

<section id="permission">
    <div class="container">
        <h4 class="m-bottom24">Permission &amp; Tickets</h4>
        Seek permission from the fishery. Contact details can be found on the <a href="/fisheries/<%= @fishery.slug %>"><%= @fishery.name %> fishery page</a>.
    </div>
</section>

<script type="application/ld+json">
    <%= raw render 'schema_org.json.jbuilder' %>
</script>