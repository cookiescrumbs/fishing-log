<h2>Add a water:</h2>
<% if @water.present? && @water.errors.any? %>
  <div class="alert alert-danger">
    <strong><%= pluralize(@water.errors.count, "error") %> prohibited this water from being saved:</strong>
    <ul>
    <% @water.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for([@fishery, @water]) do |f| %>
<div class="form-group">
  <label for="water_name">Name</label>
  <%= f.text_field :name, class: "form-control", placeholder: "Enter water name"%>
</div>
<div class="form-group">
  <label for="water_longitude">Longitude</label>
  <%= f.text_field :lng, class: "form-control", id: "water_longitude", placeholder: "Enter longitude"%>
</div>
<div class="form-group">
  <label for="water_Latitude">Latitude</label>
  <%= f.text_field :lat, class: "form-control", id: "water_Latitude", placeholder: "Enter latitude"%>
</div>
  <%= button_tag "Submit", class: "btn btn-default" %>
<% end %>