<%= render 'navigation' %>
<section id="your-fisheries" class="container top17">
  <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="clearfix">
            <h3 class="bottom44 pull-left">Manage your fishery</h3>
            <% if current_user.auth === Rails.application.config.admin %>
              <%= link_to 'Add a new fishery', new_admin_fishery_path, class: 'btn btn-warning pull-right', id: 'new-fishery' %>
            <% end %>
          </div>
          <% @fisheries.each do |fishery| %>
            <div class="panel panel-default">
              <div class="panel-heading clearfix">
                <h4 class="pull-left"><%= fishery.name %></h4>
                <%= link_to 'Edit details', edit_admin_fishery_path(fishery), class: 'btn btn-default pull-right' %>
              </div>
              <div class="panel-body">
                <div class="row">
                  <div class="col-lg-12 top17 p-bottom10 clearfix">
                    <h4 class="pull-left">Waters</h4>
                    <%= link_to 'Add a new water', new_admin_fishery_water_path(fishery), class: 'btn btn-warning pull-right' %>
                  </div>
                </div>
                  <% if !fishery.waters.nil? && fishery.waters.exists? %>
                    <% fishery.waters.each do | water | %>
                      <% image_src = (water.images.first)? water.images.first.image.url(:medium) : '/images/missing.png' %>
                      <% image_styles = (water.images.first)? '' : 'missing-image max-width-50' %>
                      <div class="col-md-4 col-sm-12 explore-item">
                            <div class="image-background">
                            <img src="<%= image_src %>" class="img-responsive img-centered <%= image_styles %>" alt="<%= water.name %>" itemprop="contentUrl">
                            </div>
                          <div class="explore-caption">
                              <h4><%= water.name %></h4>
                              <p class="text-muted"><%= water.short_address %></p>
                              <%= link_to 'Edit details', edit_admin_fishery_water_path(fishery, water), class: 'btn btn-default btn-sm' %>
                              <%= link_to 'Delete', admin_fishery_water_path(fishery, water), method: :delete, data: { confirm: "Are you sure you want to delete #{water.name}" }, class: 'btn btn-default btn-sm btn-danger destroy' %>
                          </div>
                      </div>
                      <% end %>
                    <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
  </div>
</section>


