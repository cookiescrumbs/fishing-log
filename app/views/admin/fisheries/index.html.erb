<h1>Listing fisheries</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Show</th> 
      <th>Edit</th>
      <th>Destroy</th>
    </tr>
  </thead>

  <tbody>
    <% @fisheries.each do |fishery| %>
      <tr>
        <td><%= fishery.id %></td>
        <td><%= fishery.name %></td>
        <td><%= link_to 'show', fishery, class: 'btn btn-default btn-sm' %></td>
        <td><%= link_to 'edit', edit_fishery_path(fishery), class: 'btn btn-default btn-sm' %></td>
        <td><%= link_to 'destroy', fishery_path(fishery), method: :delete, data: { confirm: "Are you sure you want to delete #{fishery.name}" }, class: 'btn btn-default btn-sm btn-danger'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Fishery', new_fishery_path, class: 'btn btn-primary' %>