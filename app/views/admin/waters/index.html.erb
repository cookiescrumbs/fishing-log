<h1>Listing Waters</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Show</th> 
      <th>Edit</th>
      <th>Destroy</th>
    </tr>
  </thead>

  <tbody>
    <% @waters.each do |water| %>
      <tr>
        <td><%= water.id %></td>
        <td><%= water.name %></td>
        <td><%= link_to 'show', admin_water_path(water), class: 'btn btn-default btn-sm' %></td>
        <td><%= link_to 'edit', edit_admin_water_path(water), class: 'btn btn-default btn-sm' %></td>
        <td><%= link_to 'destroy', admin_water_path(water), method: :delete, data: { confirm: "Are you sure you want to delete #{water.name}" }, class: 'btn btn-default btn-sm btn-danger'%></td>
      </tr>
    <% end %>
  </tbody>
</table>