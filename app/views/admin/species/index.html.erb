<h1>Listing species</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Destroy</th>
    </tr>
  </thead>

  <tbody>
    <% @all_species.each do |species| %>
      <tr>
        <td><%= species.id %></td>
        <td><%= species.name %></td>
        <td><%= link_to 'Show', admin_species_path(species) %></td>
        <td><%= link_to 'Edit',  edit_admin_species_path(species) %></td>
        <td><%= link_to 'Destroy', admin_species_path(species), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= render 'form' %>


