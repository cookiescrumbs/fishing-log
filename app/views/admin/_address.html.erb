<div class="form-group" id="address">
    <%= form.fields_for :address do |f| %>
      <div class="form-group">
        <label for="postcode">Postcode</label>
        <%= f.text_field :postcode, class: "form-control", id:"postcode", placeholder: "Postcode"%>
      </div>
      <div class="form-group">
        <label for="street">Street</label>
        <%= f.text_field :street, class: "form-control", id:"street", placeholder: "Street"%>
      </div>
      <div class="form-group">
        <label for="line2">Line Two</label>
        <%= f.text_field :line2, class: "form-control", id:"line2", placeholder: "Line two"%>
      </div>
      <div class="form-group">
        <label for="region">County</label>
        <%= f.text_field :region, class: "form-control", id:"region", placeholder: "County"%>
      </div>
      <div class="form-group">
        <label for="country">Country</label>
        <%= f.select :country, ['England','Scotland','Wales'], class: "form-control", id:"country" %>
      </div>
    <% end %>
</div>
