<% if !locals[:trips].nil? %>
    <% locals[:trips].each do | trip | %>
        <div class="simple-card col-md-4 col-sm-12">
            <a href="/trips/<%= trip[:id] %>" class="explore-link" >
                <% 
                    image_src = "https://#{Rails.application.config.imgix[:source]}#{trip[:image]}"
                %> 
                <img src="<%= image_src %>?fit=crop&w=650&h=350" class="img-responsive img-centered" alt="<%= trip[:title]%>">
            <div class="caption">
                <h4><%= trip[:title] %></h4>
                <p class="text-muted"><%= trip[:short_address] %></p>
                <h4><%= trip[:formatted_date] %></h4>
            </div>
            </a>
        </div>
    <% end %>
<% end %>
