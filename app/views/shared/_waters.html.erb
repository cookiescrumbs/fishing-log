<% if !@waters.nil? && @waters.exists? %>
    <% @waters.each do | water | %>
        <% image_src = (water.images.first)? water.images.first.image.url(:medium) : '/images/missing.png' %>
        <% image_styles = (water.images.first)? '' : 'missing-image max-width-54 p-top5 p-bottom5' %>
        <div class="simple-card col-md-4 col-sm-12">
            <a href="/waters/<%= water.slug %>" class="explore-link" >
                <img src="<%= image_src %>" class="img-responsive img-centered <%= image_styles %>" alt="<%= water.name %>">
            <div class="caption">
                <h4><%= water.name %></h4>
                <p class="text-muted"><%= water.short_address %></p>
            </div>
            </a>
        </div>
    <% end %>
<% end %>