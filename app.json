{
  "name": "lets-fish",
  "description": "Serving images from Cloud Front",
  "scripts": {
    "postdeploy": "bundle exec rails db:schema:load && pg_restore --verbose --no-acl --no-owner -h $DATABASE_URL --data-only  < ./db/pg_backups/lets_fish_development.dump"
  },
  "env": {
    "AWS_ACCESS_KEY_ID": {
      "required": true
    },
    "AWS_REGION": {
      "required": true
    },
    "AWS_SECRET_ACCESS_KEY": {
      "required": true
    },
    "CODESHIP_ID": {
      "required": true
    },
    "HEROKU_POSTGRESQL_BRONZE_URL": {
      "required": true
    },
    "LANG": {
      "required": true
    },
    "RACK_ENV": {
      "required": true
    },
    "RAILS_ENV": {
      "required": true
    },
    "REDIS_PROVIDER": {
      "required": true
    },
    "REDISTOGO_URL": {
      "required": true
    },
    "S3_BUCKET_NAME": {
      "required": true
    },
    "S3_REGION": {
      "required": true
    },
    "SECRET_KEY_BASE": {
      "required": true
    }
  },
  "formation": {
  },
  "addons": [
    "codeship",
    "heroku-postgresql",
    "redistogo"
  ],
  "buildpacks": [
    {
      "url": "heroku/ruby"
    }
  ]
}
