{
  "name": "lets-fish",
  "description": "Serving images from Cloud Front",
  "scripts": {
    "postdeploy": "heroku config:set HEROKU_APP_NAME=$(heroku info -s | grep web_url | cut -d. -f1 | cut -d: -f2 | sed 's/\/\///') && heroku pg:backups:restore lets-fish::b240 DATABASE_URL --app ENV['HEROKU_APP_NAME'] --confirm ENV['HEROKU_APP_NAME'] && bundle exec db:migrate"
  },
  "env": {
    "AWS_ACCESS_KEY_ID": {
      "required": true
    },
    "AWS_REGION": {
      "required": true
    },
    "AWS_SECRET_ACCESS_KEY": {
      "required": true
    },
    "CODESHIP_ID": {
      "required": true
    },
    "HEROKU_POSTGRESQL_BRONZE_URL": {
      "required": true
    },
    "LANG": {
      "required": true
    },
    "RACK_ENV": {
      "required": true
    },
    "RAILS_ENV": {
      "required": true
    },
    "REDIS_PROVIDER": {
      "required": true
    },
    "REDISTOGO_URL": {
      "required": true
    },
    "S3_BUCKET_NAME": {
      "required": true
    },
    "S3_REGION": {
      "required": true
    },
    "SECRET_KEY_BASE": {
      "required": true
    }
  },
  "formation": {
  },
  "addons": [
    "codeship",
    "heroku-postgresql",
    "redistogo"
  ],
  "buildpacks": [
    {
      "url": "heroku/ruby"
    }
  ]
}
